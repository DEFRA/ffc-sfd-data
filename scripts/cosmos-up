echo "checking cosmos is available on $AZURE_COSMOS_HOST"
response=''
max_tries=20
count=0
while :
do
  count=$(expr $count + 1)
  if [ "$count" -ge "$max_tries" ]; then
		echo "cosmos did not respond in time"
		exit 1
	fi
  echo "making request to $AZURE_COSMOS_HOST"
  response=$(wget -SO- -T 1 -t 1 --no-check-certificate $AZURE_COSMOS_HOST | grep '401 Unauthorized')
  echo "response: $response"
  
  printf '.'
  sleep 4
done
echo cosmos started