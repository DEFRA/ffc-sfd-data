{
  "name": "ffc-sfd-data",
  "version": "0.8.1",
  "description": "Data integration service for Single Front Door",
  "homepage": "github.com?owner=defra&repo=ffc-sfd-data&organization=defra",
  "main": "app/index.js",
  "type": "module",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "nodemon --inspect=0.0.0.0 --ext js --legacy-watch app/index.js",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext js --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [
    "John Watson john.watson1@defra.gov.uk",
    "Fay Toward fay.toward@defra.gov.uk",
    "Simon Dunn simon.dunn1@defra.gov.uk",
    "Rana Salem rana.salem@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@apollo/server": "4.11.0",
    "@as-integrations/hapi": "2.0.1",
    "@azure/cosmos": "4.0.0",
    "@azure/identity": "4.3.0",
    "@hapi/boom": "10.0.1",
    "@hapi/catbox-redis": "6.0.2",
    "@hapi/hapi": "21.3.2",
    "applicationinsights": "2.9.1",
    "graphql": "16.9.0",
    "joi": "17.12.0"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "5.0.1",
    "@types/jest": "29.5.11",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "nodemon": "3.0.1",
    "standard": "17.1.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
